{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["ES2021", "ES2017", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "jest"],
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/*"],
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "dist",
    "dist*",
    "node_modules",
    "subfolder/dist",
    "subfolder/node_modules",
    "**/dist/*",
    "**/node_modules/*"
  ]
}
