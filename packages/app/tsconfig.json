{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["ES2021", "ES2017", "dom"],
    "rootDir": "./src",
    "moduleResolution": "node"
  },
  "include": ["src/*"],
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "dist",
    "dist*",
    "node_modules",
    "subfolder/dist",
    "subfolder/node_modules",
    "**/dist/*",
    "**/node_modules/*"
  ]
}
